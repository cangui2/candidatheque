{% extends 'base_entreprise.html.twig' %}

{% block body %}

    <body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-4 mx-auto">
                <div class="card card-signin my-5" style="background-color: #f8f9fa">
                    <div class="card-body">
                        <h5 class="card-title text-left p-1">Connexion entreprise</h5>
                        <form class=" mb-4 mb-lg-5 py-4" method="post" action="{{ path('login') }}">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            {% for label, messages in app.flashes(['info', 'notice', 'danger', 'success']) %}
                                {% for message in messages %}
                                    <div class=" mt-4 alert alert-{{ label }}" role="alert" id="div_alertes">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}

                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes déjà connecté. <a href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% endif %}

                            <div class="form-group ">
                                {# <label class="mb-0" for="rechercheInput1">Profession</label> #}
                                <input type="email" name="email" id="inputEmail" class="form-control"
                                       placeholder="Email" required autofocus>
                            </div>
                            <div class="form-group ">
                                {# <label class="mb-0" for="rechercheInput2">Lieu</label> #}
                                <input type="password" name="password" id="inputPassword" class="form-control"
                                       placeholder="Mot de passe" required>
                            </div>

                            <div class="custom-control custom-checkbox mb-3 ">
                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                <label class="custom-control-label" for="customCheck1">Se souvenir de moi </label>
                            </div>
                            <button class="btn  btn-primary btn-block text-uppercase " type="submit">Se connecter
                            </button>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <hr>
                            <div class="text-center"><a href="{{ path("entreprise_inscription") }}">Vous n'avez pas encore de compte, inscrivez-vous !</a></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
    <div class="card-deck my-5">
        <div class="card bg-light px-3 pt-2">
            <div class= "text-center">
                <img class="card-img-top rounded-circle" src="{{ asset("assets/images/blueprint.svg") }}" style="width: 5rem; height: 5rem" alt="Card image cap">
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title">Créer mon CV en ligne</h5>
                <p class="card-text">Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                <a href="#" class="btn btn-primary colorBG-3E68D4Cdtk zoom-bouton mt-auto">Créer</a>
            </div>
        </div>
        <div class="card bg-light px-3 pt-2">
            <div class= "text-center">
                <img class="card-img-top rounded-circle" src="{{ asset("assets/images/archive.svg") }}" style="width: 5rem; height: 5rem" alt="Card image cap">
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title">Déposer mon CV</h5>
                <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna.</p>
                <a href="#" class="btn btn-primary colorBG-3E68D4Cdtk zoom-bouton mt-auto">Déposer</a>
            </div>
        </div>

        <div class="card bg-light px-3 pt-2" >
            <div class= "text-center">
                <img class="card-img-top rounded-circle" src="{{ asset("assets/images/loudspeaker.svg") }}" style="width: 5rem; height: 5rem" alt="Card image cap">
            </div>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Infos et conseils</h5>
                <p class="card-text">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
                <a href="#" class="btn btn-primary colorBG-3E68D4Cdtk zoom-bouton mt-auto">S'informer</a>
            </div>
        </div>
    </div>
</div>
</body>
{% endblock %}