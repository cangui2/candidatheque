<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="stylesheet" href="{{ asset("assets/css/bootstrap.min.css") }}">
		<link rel="stylesheet" href="{{ asset("assets/css/font-awesome.min.css") }}">
		<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}"/> {% block stylesheets %}{% endblock %}
	</head>
		<body>
			<header>
				{% if is_granted("ROLE_CANDIDAT") %}
					<nav class="navbar navigation-corner navbar-expand-lg navbar-light bg-color-principale1">
						<a class="navbar-brand text-light" href="{{ path("home") }}">CANDIDATHEQUE</a>
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>

						<div class="collapse navbar-collapse" id="navbarSupportedContent">
							<ul class="navbar-nav mr-auto">
								<li class="nav-item">
									<a class="nav-link" href="/">Tableau de bord</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('recherche_liste') }}">Offres d'emploi</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path("candidat_cv") }}">Atelier CV</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('blog') }}">Blog</a>
								</li>
							</ul>
							<form class="form-inline my-2 mx-3 my-lg-0">
								<button type="button" class="btn text-light cube btn-outline-light my-2 my-sm-0 bold-border"><h3>C</h3></button>
							</form>
						</div>
					</nav>
				{% else %}
				<div class="navbar navbar-expand-md navbar-light bg-light">
					<a class="navbar-brand titre1 mr-auto" id="brand" href="{{ path("home") }}">CANDIDATHE<i class="fa fa-search" aria-hidden="true"></i>UE</a>

					<div>
						<a href="{{ path("login") }}" class="btn zoom-bouton candidat-corner btn-sm text-white" role="button">Se connecter</a><a href="{{ path("candidat_inscription") }}" class="btn zoom-bouton login-corner btn-sm" role="button">S'inscrire <i class="fa fa-sign-in" aria-hidden="true"></i></a>
						<a href="{{ path("espace_entreprise") }}" class="btn zoom-bouton entreprise-corner btn-sm" role="button">Espace entreprise</a>
					</div>
					<button class="navbar-toggler mx-2" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
				</div>
				<nav class="navbar navigation-corner navbar-expand-md navbar-light bg-light py-0">
					
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul id="menu" class="navbar-nav margin-navbar">

							<li class="nav-item">
								<a class="nav-link presence {{ app.request.pathinfo == "/recherche_liste"? "active"}} mx-2 px-0" href="{{ path('recherche_liste') }}">Offres d'emploi</a>
							</li>
							<li class="nav-item">
								<a class="nav-link presence {{ app.request.pathinfo == "/cv"? "active"}} mx-2 px-0" href="{{ path("candidat_cv") }}">Atelier CV</a>
							</li>
							<li class="nav-item">
								<a class="nav-link presence {{ app.request.pathinfo == "/blog"? "active"}} mx-2 px-0" href="{{ path('blog') }}">Blog</a>
							</li>

						</ul>
					</div>
				</nav>
				{% endif %}
			</header>

			{% block body %}{% endblock %}
			
			<!-- Footer -->
			<footer class="page-footer font-small  bg-color-secondaire1">

				<div class="container">

					<!-- Grid row-->
					<div class="row text-center d-flex justify-content-center pt-3">
						<div class="col-md-2 mb-3">
							<h6 class="text-uppercase">
								<a href="#! " class="colorTxt-aliceblueCdtk">A propos <i class="fa fa-wpexplorer" aria-hidden="true"></i></a>
							</h6>
						</div>
						<div class="col-md-2 mb-3">
							<h6 class="text-uppercase">
								<a href="#!" class="colorTxt-aliceblueCdtk">Nos services</a>
							</h6>
						</div>
						<div class="col-md-2 mb-3">
							<h6 class="text-uppercase">
								<a href="#!" class="colorTxt-aliceblueCdtk">Mentions légales</a>
							</h6>
						</div>
						<div class="col-md-2 mb-3">
							<h6 class="text-uppercase">
								<a href="#!" class="colorTxt-aliceblueCdtk">FAQ</a>
							</h6>
						</div>
						<div class="col-md-2 mb-3">
							<h6 class="text-uppercase">
								<a href="#!" class="colorTxt-aliceblueCdtk">Contact</a>
							</h6>
						</div>
					</div>

					<!-- Copyright -->
					<hr class="rgba-white-light" style="margin: 0 15%;">
					<div class="row d-flex text-center justify-content-center mb-md-0 mb-4"></div>
					<div class="footer-copyright text-center py-3 colorTxt-3E68D4Cdtk">© 2020 Copyright : Candidatheque.com</div>

				</div>

			</footer>

				<script src="{{ asset("/assets/js/jquery-3.5.1.min.js") }}"></script>
				<script src="{{ asset("/assets/js/popper.min.js") }}" ></script>
				<script src="{{ asset("/assets/js/bootstrap.min.js") }}" ></script>
				{% block javascripts %}{% endblock %}
			</body>
	</html>
